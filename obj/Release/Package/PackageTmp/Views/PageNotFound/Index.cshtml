@{
    Layout = "~/Views/Shared/_Front.cshtml";
    ViewBag.Title = "404 Page Not Found";
}
    <div class="text-center mb-5">
        <div class="error mx-auto" data-text="404">404</div>
        <p class="lead text-gray-800 mb-5">Page Not Found</p>
        <p class="text-gray-500 mb-2">It looks like you found a glitch in the matrix...</p>
        <a href="javascript:void(0)" onclick="goTo()">← Back to Dashboard</a>
    </div>

@section custom_css
{
    <style>
        .error {
            font-size: 5rem;
            width: 9.0rem;
        }
    </style>
}

@section custom_js
{
    <script>
        function goTo() {
            location.href = '@Url.Action("Index", "Dashboard")'
        }
    </script>
}