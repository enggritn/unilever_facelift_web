@{
    Layout = null;
    int i = 1;
}
@model Facelift_App.Models.AccidentDTO
<!DOCTYPE html>
<html>
<head>
    <title>@Model.TransactionCode</title>
    <style type="text/css">
        body {
            font-family: Arial;
        }

        th, td {
            padding: 10px;
        }

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: gray;
            color: white;
            text-align: center;
        }
    </style>
</head>

<body>
    <table width='100%'>
        <tbody>
            <tr>
                <td width="20%"></td>
                <td width="60%" align="center" valign="middle">
                    <h1>
                        <b>BERITA ACARA</b>
                    </h1>
                </td>
                <td width="20%" align="center" valign="middle">
                    <img style="width:70px;height:70px;" src="@ViewBag.Logo" />
                </td>
            </tr>
        </tbody>
    </table>
    <table width='100%'>
        <tbody>
            <tr>
                <td colspan="4">Berita Acara ini menerangkan bahwa pada</td>
            </tr>
            <tr>
                <td padding="2px" width="5%"></td>
                <td padding="2px" width="15%">Hari</td>
                <td padding="2px" width="1%">:</td>
                <td padding="2px" width="79%">@Model.Day</td>
            </tr>
            <tr>
                <td padding="2px" width="5%"></td>
                <td padding="2px" width="15%">Tanggal</td>
                <td padding="2px" width="1%">:</td>
                <td padding="2px" width="79%">@Model.Date</td>
            </tr>
            <tr>
                <td padding="2px" width="5%"></td>
                <td padding="2px" width="15%">Pukul</td>
                <td padding="2px" width="1%">:</td>
                <td padding="2px" width="79%">@Model.Time</td>
            </tr>
            <tr>
                <td colspan="4">
                    Telah terjadi kehilangan atau kerusakan pada unit pallet
                    sejumlah @Model.Qty unit. Detail kerusakan yang terjadi adalah sebagai berikut:
                </td>
            </tr>
            <tr>
                <td height="15px"></td>
            </tr>
        </tbody>
    </table>
    <table width='100%'>
        <tbody>
            <tr>
                <td style="border: 1px solid;" width="10%"><b>No.</b></td>
                <td style="border: 1px solid;" width="55%"><b>KODE RFID</b></td>
                <td style="border: 1px solid;" width="35%"><b>PENJELASAN</b></td>
            </tr>
            @*Dynamic view*@
            @foreach (Facelift_App.Models.AccidentItemDTO item in Model.Items)
            {
                <tr>
                    <td style="border: 1px solid;" width="10%">@i</td>
                    <td style="border: 1px solid;" width="55%">@item.TagId</td>
                    <td style="border: 1px solid;" width="35%">@item.ReasonName</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <table width='100%'>
        <tbody>
            <tr>
                <td height="10px"></td>
            </tr>
            <tr>
                <td>
                    Demikian Berita Acara ini kami laporkan. Atas perhatiannya kami ucapkan terima kasih.
                </td>
            </tr>
        </tbody>
    </table>
    <table width='100%' style="margin-top:30px;">
        <tbody>
            <tr>
                <td height="30px"></td>
            </tr>
            <tr>
                <td width="20%" align="center">Pelapor</td>
                <td width="60%" align="center"></td>
                <td width="20%" align="center">Manager</td>
            </tr>
            <tr></tr>
            <tr></tr>
            <tr>
                <td width="20%" align="center" height="50">________________</td>
                <td width="60%" align="center"></td>
                <td width="20%" align="center" height="50">________________</td>
            </tr>
        </tbody>
    </table>
    <table style="margin-top:2px;">
        <tbody>
            <tr>
                <td style="font-size:10px;">Generated At @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</td>
            </tr>
        </tbody>
    </table>
    @*<div class="footer">
            <p>Copyright © @DateTime.Now.Year <b>PT. Unilever Indonesia</b>. All Rights Reserved.</p>
        </div>*@
</body>

</html>